<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PasswordManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding colors for night theme -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariantDark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>
</resources>
